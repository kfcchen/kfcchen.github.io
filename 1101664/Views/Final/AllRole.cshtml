        }

        /*設定thead顏色*/
        .table > thead > tr {
            background-color: #d3eff2;
        }

        /*設定tfoot顏色及文字對齊*/
        .table > tfoot > tr {
            background-color: #aed2d6;
        }

        /*設定文字對齊*/
        .table > caption, .table > thead > tr > th, .table > tfoot > tr {
